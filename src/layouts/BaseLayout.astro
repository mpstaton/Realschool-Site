---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name='viewport' content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    </head>

    <body>
        <slot />
    </body>
</html>

<style is:global>


body {
  color: rgb(var(--foreground-rgb));
  background: #103541;
}

</style>